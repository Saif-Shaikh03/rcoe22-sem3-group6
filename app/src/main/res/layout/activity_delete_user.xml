<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delete_user"
    android:background="#AEE2FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rlemail_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#8019376D"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_delu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="You can delete your account here. Please verify yourself first"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/b612_bold"
                android:textSize="25dp" />


            <EditText
                android:id="@+id/password2_delu"
                android:layout_width="267dp"
                android:layout_height="67dp"
                android:layout_below="@+id/tv_delu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:background="@drawable/border"
                android:backgroundTint="#75101010"
                android:drawableLeft="@drawable/ic_baseline_key_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/signup1_delu"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_below="@+id/password2_delu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/mybutton5"


                android:text="Authenticate"

                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.565" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlemail_up_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlemail_up"
            android:layout_margin="15dp"
            android:background="#8019376D"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Your profile is not verified yet!!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/b612_bold"
                android:textSize="25dp" />



            <Button
                android:id="@+id/signup1_delete"
                android:layout_width="128dp"
                android:layout_height="55dp"
                android:layout_below="@+id/tv_delete"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton5"


                android:text="Delete User"

                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.565" />

        </RelativeLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_delu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>